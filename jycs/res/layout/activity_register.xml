<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_all_page"
    android:orientation="vertical" >

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#eaeaea"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_submit" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_bottom"
        android:layout_below="@+id/layout_title"
        android:background="@color/background_all_page" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_margin_left" >

                    <TextView
                        android:id="@+id/tv_register_name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_dimen_all"
                        android:gravity="center_vertical"
                        android:text="姓名："
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_regisname"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_dimen_all"
                        android:layout_toRightOf="@id/tv_register_name"
                        android:background="@null"
                        android:hint="请输入你的真实姓名"
                        android:textColor="@color/color_text_all_gray"
                        android:textSize="@dimen/sizi_register_text" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_dimen_all"
                        android:layout_toRightOf="@id/et_regisname"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <Spinner
                            android:id="@+id/select_sex"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:layout_marginLeft="@dimen/dp_margin_left"
                            android:layout_marginRight="@dimen/dp_margin_left"
                            android:background="@drawable/background_spinner"
                            android:popupBackground="@android:color/white" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_margin_left"
                    android:src="@drawable/divider_line_short" />

                <RelativeLayout
                    android:id="@+id/rl_register2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_dimen_all"
                    android:layout_marginLeft="@dimen/dp_margin_left" >

                    <TextView
                        android:id="@+id/tv_register_name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_dimen_all"
                        android:gravity="center_vertical"
                        android:text="职务："
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_regiswork"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_dimen_all"
                        android:layout_toRightOf="@id/tv_register_name"
                        android:background="@null"
                        android:hint="请输入你的具体职务"
                        android:textColor="@color/color_text_all_gray"
                        android:textSize="@dimen/sizi_register_text" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_dimen_all"
                        android:layout_toRightOf="@id/et_regiswork"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <Spinner
                            android:id="@+id/select_category"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="10dp"
                            android:layout_marginLeft="@dimen/dp_margin_left"
                            android:layout_marginRight="@dimen/dp_margin_left"
                            android:background="@drawable/background_spinner"
                            android:gravity="center"
                            android:popupBackground="@android:color/white" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_margin_left"
                    android:src="@drawable/divider_line_short" />

                <RelativeLayout
                    android:id="@+id/rl_register3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/rl_register2"
                    android:layout_marginLeft="@dimen/dp_margin_left" >

                    <TextView
                        android:id="@+id/tv_register_name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_dimen_all"
                        android:gravity="center_vertical"
                        android:text="地址："
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/ll_address"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_dimen_all"
                        android:layout_toRightOf="@id/tv_register_name"
                        android:layout_marginRight="@dimen/dp_margin_left"
                        android:orientation="horizontal" >

                        <Spinner
                            android:id="@+id/select_gove"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1.0"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/background_spinner"
                            android:gravity="center"
                            android:popupBackground="@android:color/white" />

                        <Spinner
                            android:id="@+id/select_city"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1.0"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="10dp"
                            android:background="@drawable/background_spinner"
                            android:gravity="center"
                            android:popupBackground="@android:color/white"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_margin_left"
                    android:src="@drawable/divider_line_short" />

                <RelativeLayout
                    android:id="@+id/rl_register9"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/dp_margin_left" >

                    <TextView
                        android:id="@+id/tv_detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_dimen_all"
                        android:gravity="center_vertical"
                        android:text="具体地址："
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_dimen_all"
                        android:layout_toRightOf="@id/tv_detail_address"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入你的详细地址"
                        android:inputType="phone"
                        android:textColor="@color/color_text_all_gray"
                        android:textSize="@dimen/sizi_register_text" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_register4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_dimen_all"
                    android:layout_marginLeft="@dimen/dp_margin_left" >

                    <TextView
                        android:id="@+id/tv_phonenum"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_dimen_all"
                        android:gravity="center_vertical"
                        android:text="手机号："
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_phonenum"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_dimen_all"
                        android:layout_toRightOf="@id/tv_phonenum"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入你的手机号"
                        android:inputType="phone"
                        android:textColor="@color/color_text_all_gray"
                        android:textSize="@dimen/sizi_register_text" />

                    <FrameLayout
                        android:id="@+id/send_identifying "
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_dimen_all"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/et_phonenum" >

                        <ImageView
                            android:id="@+id/img_send_identifying_press"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/background_send_identifying"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_send_identifying"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="60"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_send_identifying"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/background_send_identifying_normal"
                            android:visibility="visible" />
                    </FrameLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_margin_left"
                    android:src="@drawable/divider_line_short" />

                <RelativeLayout
                    android:id="@+id/rl_register5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_dimen_all"
                    android:layout_marginLeft="@dimen/dp_margin_left" >

                    <TextView
                        android:id="@+id/tv_identifying_code"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_dimen_all"
                        android:gravity="center_vertical"
                        android:text="验证码："
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_identifying_code"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_dimen_all"
                        android:layout_toRightOf="@id/tv_identifying_code"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入你收到的短信验证码"
                        android:textColor="@color/color_text_all_gray"
                        android:textSize="@dimen/sizi_register_text" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_margin_left"
                    android:src="@drawable/divider_line_short" />

                <RelativeLayout
                    android:id="@+id/rl_register6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_dimen_all"
                    android:layout_marginLeft="@dimen/dp_margin_left" >

                    <TextView
                        android:id="@+id/tv_password"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_dimen_all"
                        android:gravity="center_vertical"
                        android:text="密码："
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_register_psw"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_dimen_all"
                        android:layout_toRightOf="@id/tv_password"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入6-16位密码"
                        android:password="true"
                        android:textColor="@color/color_text_all_gray"
                        android:textSize="@dimen/sizi_register_text" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_margin_left"
                    android:src="@drawable/divider_line_short" />

                <RelativeLayout
                    android:id="@+id/rl_register7"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_dimen_all"
                    android:layout_marginLeft="@dimen/dp_margin_left" >

                    <TextView
                        android:id="@+id/tv_config_password"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_dimen_all"
                        android:gravity="center_vertical"
                        android:text="确认密码："
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_confirmPwdEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_dimen_all"
                        android:layout_toRightOf="@id/tv_config_password"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请再次确认密码"
                        android:password="true"
                        android:textColor="@color/color_text_all_gray"
                        android:textSize="@dimen/sizi_register_text" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_register8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_dimen_all"
                android:layout_marginTop="20dp"
                android:background="@android:color/white" >

                <TextView
                    android:id="@+id/tv_backs"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_dimen_all"
                    android:layout_marginLeft="@dimen/dp_margin_left"
                    android:gravity="center_vertical"
                    android:text="备注："
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_backs"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_dimen_all"
                    android:layout_toRightOf="@id/tv_backs"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="如有特殊说明请写在备注里"
                    android:textColor="@color/color_text_all_gray"
                    android:textSize="@dimen/sizi_register_text" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>